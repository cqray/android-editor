<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/__re_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="horizontal">

    <com.flask.colorpicker.ColorPickerView
        android:id="@+id/__re_color_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:density="10"
        app:lightnessSlider="true"
        app:lightnessSliderView="@id/__re_slider"
        app:wheelType="FLOWER" />


    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <com.flask.colorpicker.slider.LightnessSlider
            android:id="@+id/__re_slider"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_re_view_height" />

        <View
            android:id="@+id/__re_color_view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_re_view_height"
            android:background="@color/colorPrimary" />

        <EditText
            android:id="@+id/__re_input1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_re_view_height"
            android:digits="0123456789AaBbCcDdEe"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="7"
            tools:ignore="LabelFor" />

    </LinearLayout>


</LinearLayout>
