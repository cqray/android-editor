<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/__re_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/__re_recycler1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:overScrollMode="never">

            </androidx.recyclerview.widget.RecyclerView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/__re_color_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/__re_fore_color"
                android:textSize="@dimen/body" />

            <View
                android:id="@+id/__re_color_view1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#456789" />

            <TextView
                android:id="@+id/__re_color_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/__re_recycler2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:overScrollMode="never">

            </androidx.recyclerview.widget.RecyclerView>
        </FrameLayout>


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/__re_color_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/__re_back_color"
                android:textSize="@dimen/body" />

            <View
                android:id="@+id/__re_color_view2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#456789" />

            <TextView
                android:id="@+id/__re_color_hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
