            android:id="@+id/__re_input1"
            android:layout_width="0dp"
            android:layout_height="@dimen/line"
            android:layout_weight="1"
            android:digits="0123456789AaBbCcDdEe"
            android:gravity="center"
            android:importantForAutofill="no"
